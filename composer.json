{
  "name": "vrinda-khandelwal/school-website",
  "description": "School website project",
  "type": "project",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.2"
  },
  "scripts": {
    "lint": "phpcs --standard=PSR12 --ignore=vendor,node_modules .",
    "lint:fix": "phpcbf --standard=PSR12 --ignore=vendor,node_modules .",
    "static-analysis": "phpstan analyse --level=5 .",
    "test": "phpunit",
    "check": [
      "@lint",
      "@static-analysis"
    ]
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
